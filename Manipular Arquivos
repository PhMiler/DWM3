<?php 

$nome = $email = $mensagem = "";
$erroNome = $erroEmail = "";

if ($_SERVER["REQUEST_METHOD"] == "POST") {

    // Validação do nome
    if (empty($_POST['nome'])) {
        $erroNome = "O campo nome é obrigatório!";
    } else {
        $nome = htmlspecialchars($_POST['nome'], ENT_QUOTES, 'UTF-8');
    }

    // Validação do e-mail
    if (empty($_POST['email'])) {
        $erroEmail = "O campo email é obrigatório!";
    } else {
        $email = filter_var($_POST['email'], FILTER_VALIDATE_EMAIL);
        if ($email === false) {
            $erroEmail = "Formato de e-mail inválido!";
        }
    }

    // Sanitização da mensagem
    $mensagem = htmlspecialchars($_POST["mensagem"], ENT_QUOTES, 'UTF-8');
}

?>

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulário com Validações</title>
</head>
<body>
    <h2>Responda o formulário!</h2>

    <form method="POST" action="<?php echo htmlspecialchars($_SERVER["PHP_SELF"]); ?>">
        <label for="nome">Nome:</label>
        <input type="text" id="nome" name="nome" value="<?php echo htmlspecialchars($nome); ?>"/>
        <span style="color: red;"><?php echo $erroNome; ?></span>
        <br>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" value="<?php echo htmlspecialchars($email); ?>"/>
        <span style="color: red;"><?php echo $erroEmail; ?></span>
        <br>

        <label for="mensagem">Mensagem:</label>
        <textarea name="mensagem" id="mensagem"><?php echo htmlspecialchars($mensagem); ?></textarea>
        <br>

        <input type="submit" value="Enviar">
    </form>

    <?php 
    if ($_SERVER["REQUEST_METHOD"] == "POST" && empty($erroNome) && empty($erroEmail)) {
        echo "<h3>Dados Recebidos:</h3>";
        echo "<p><strong>Nome:</strong> " . htmlspecialchars($nome) . "</p>"; 
        echo "<p><strong>Email:</strong> " . htmlspecialchars($email) . "</p>"; 
        echo "<p><strong>Mensagem:</strong> " . htmlspecialchars($mensagem) . "</p>"; 
    }
    ?>
</body>
</html>
